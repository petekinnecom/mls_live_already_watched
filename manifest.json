{
  "name": "MLS Live: Already Watched",
  "description": "In schedule view on live.mlssoccer.com, indicate which games you've already watched. STUNNING TECHNOLOGY.",

  "version": "0.0.1",
  "manifest_version": 2,

  "icons": {
    "128": "icon.png"
  },

  "permissions": [
    "history"
  ],

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://live.mlssoccer.com/*"],
      "js": ["inject.js"]
    }
  ]

}
